<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <base href="/"/>
  <link rel="stylesheet" href="@Assets["lib/bootstrap/dist/css/bootstrap.min.css"]"/>
  <link rel="stylesheet" href="@Assets["app.css"]"/>
  <link rel="stylesheet" href="@Assets["AStar.Dev.SampleBlazor.styles.css"]"/>
  <ImportMap/>
  <link rel="icon" type="image/png" href="favicon.png"/>
  <HeadOutlet @rendermode="InteractiveServer"/>
  <script>
    // Check theme preference from localStorage or default
    const systemPrefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
    const prefersDark = localStorage.getItem("darkmode") === "true" || systemPrefersDark;

    if (prefersDark) {
      document.documentElement.classList.add("dark");
    }
  </script>
</head>

<body>
<Routes @rendermode="InteractiveServer"/>
<script src="_framework/blazor.web.js"></script>
<script src="js/site.js"></script>
<script src="js/theme.js"></script>
<script>
  // Execute ASAP to avoid FOUC
  const darkMode = localStorage.getItem("darkmode");
  if (darkMode === "true") {
    document.documentElement.classList.add("dark");
  }
</script>

</body>

</html>
